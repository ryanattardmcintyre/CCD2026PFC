<ul class="navbar-nav">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello @User.Identity!.Name</span>
        </li>
        <li class="nav-item">
            <form method="post" action="/auth/logout" class="d-inline">
                <button type="submit" class="nav-link btn btn-link text-dark p-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/auth/login">Login with Google</a>
        </li>
    }
</ul>
